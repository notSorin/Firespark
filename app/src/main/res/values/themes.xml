<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Firespark" parent="Theme.MaterialComponents">
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>

        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:colorBackground">#333342</item>
        <item name="colorSurface">@color/white_50</item>
        <item name="colorError">@color/red_600</item>

        <!-- Customize your theme here. -->
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Firespark.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Firespark.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Firespark.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Firespark.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Firespark.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Firespark.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Firespark.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Firespark.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Firespark.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Firespark.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Firespark.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Firespark.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Firespark.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Firespark.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Firespark.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Firespark.LargeComponent</item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.MaterialComponents.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.Firespark.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <style name="Theme.Firespark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>